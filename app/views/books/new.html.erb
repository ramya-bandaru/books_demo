<h1> Add a new book </h1>
<%= form_for(Book.new, url: url_for(controller:"books" , action:"create"), method: :post) do |f| %>
<div>
  <label>Name</label>
  <%= f.text_field :name %>
</div>

<div>
  <label>Author</label>
  <%= f.text_field :author %>
</div>

<% end %>

<button type ="submit">Submit</button>
